<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/A400</item>
        <item name="colorPrimaryDark">@color/A400</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="toolbar_title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/toolbar_items</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="toolbarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorSecondary">#fff</item>
    </style>

    <style name="expandedTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">30sp</item>

        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="collapsedTitle" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
